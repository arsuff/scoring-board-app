<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.achmiral.scoringboard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".MenuActivity" />
        <activity android:name=".BasketMenuActivity" />
        <activity android:name=".BasketScoreActivity" />
        <activity android:name=".VolleyMenuActivity" />
        <activity android:name=".ListHistoryVolleyActivity" />
        <activity android:name=".HistoryVolley" />
        <activity android:name=".VolleyScore" />
        <activity android:name=".BasketHistoryActivity" />
        <activity android:name=".BasketHistoryDetailActivity"></activity>
    </application>

</manifest>